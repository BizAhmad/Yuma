[*]
charset=utf-8
end_of_line=lf
trim_trailing_whitespace=false
insert_final_newline=true
indent_style=tab
tab_width=2

[{.babelrc,.stylelintrc,.eslintrc,jest.config,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_style=space
indent_size=2

[{messages.*,messages,spring.schemas,spring.handlers,org.codehaus.groovy.runtime.ExtensionModule,*.properties}]
indent_style=space
indent_size=4

[{*.applejs,*.js}]
indent_style=space
indent_size=2

[{*.ddl,*.sql}]
indent_style=space
indent_size=2

[{*.gson,*.gradle,*.groovy,*.gdsl,*.gy,*.gant}]
indent_style=space
indent_size=4

[*.js.map]
indent_style=space
indent_size=2

[yarn.lock]
indent_style=space
indent_size=2

